<h1>Reviews for <%= link_to @movie.title, @movie %></h1>

<ul class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <%= pluralize(review.stars, 'star') %>
      <p>
        <%= link_to review.user.name, user_path(review.user)%>
        <span class="date">
          <%= time_ago_in_words(review.created_at) %> ago
        </span>: <%= review.comment %>
      </p>

    </li>
  <% end %>
</ul>